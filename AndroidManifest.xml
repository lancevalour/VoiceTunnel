<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yicheng.android.app.voicetunnel"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="yicheng.android.app.voicetunnel.StartingViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/startingTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="yicheng.android.app.voicetunnel.LoginActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="yicheng.android.app.voicetunnel.LOGINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
          <activity
            android:name="yicheng.android.app.voicetunnel.RegisterActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="yicheng.android.app.voicetunnel.REGISTERACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>